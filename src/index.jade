- var base = basePath || '/';
- var useRefract = process.env.ENV === 'production'

doctype html

html(lang="ru")
  head
    meta(charset="utf-8")/
    meta(name="viewport", content="width=device-width, initial-scale=1.0")/

    title Blueprinter

    link(rel="apple-touch-icon", sizes="180x180", href= base + "apple-touch-icon.png")/
    link(href= base + "favicon.ico", rel="shortcut icon")/
    link(rel="icon", type="image/png", href= base + "favicon-32x32.png", sizes="32x32")/
    link(rel="icon", type="image/png", href= base + "favicon-16x16.png", sizes="16x16")/
    link(rel="mask-icon", href= base + "safari-pinned-tab.svg", color="#5bbad5")/

  body
    #react-app.document__app
    if useRefract
      script(type="text/javascript" src="./refract.js")
